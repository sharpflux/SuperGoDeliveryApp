<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".StepTwoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:paddingTop="20dp"
        >
        <ScrollView

            android:scrollbars="none"
            android:fillViewport="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_background"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loginButton"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sfui_text_regular"
                        android:text="Select pickup Date*"
                        android:textColor="#123"
                        android:textSize="14sp" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardviewdate"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">



                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_date"/>

                            <!--<com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/animation_view"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                app:lottie_autoPlay="true"
                                app:lottie_fileName="calendar.json"
                                app:lottie_loop="true" />-->

                            <!-- <EditText
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:background="@null"
                         android:hint="Enter Pick up date"
                         android:inputType="number"
                         android:paddingLeft="08dp"
                         android:textColor="@color/text_grey"
                         android:textColorHint="@color/lightgrey"
                         android:fontFamily="@font/sfui_text_regular"
                         android:textSize="12.5sp"

                         />-->
                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:fontFamily="@font/sfui_text_regular"
                                android:paddingLeft="08dp"
                                android:textColor="@color/text_grey"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="12.5sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loginButton"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sfui_text_regular"
                        android:text="Select pickup time*"
                        android:textColor="#123"
                        android:textSize="14sp" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardviewtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_time"/>

                            <!--  <com.airbnb.lottie.LottieAnimationView

                                 android:layout_width="40dp"
                                 android:layout_height="25dp"
                                 android:layout_gravity="center"
                                 app:lottie_autoPlay="true"
                                 app:lottie_fileName="watch.json"
                                 app:lottie_loop="true" />

                             <EditText
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:background="@null"
                          android:hint="Enter Pick up date"
                          android:inputType="number"
                          android:paddingLeft="08dp"
                          android:textColor="@color/text_grey"
                          android:textColorHint="@color/lightgrey"
                          android:fontFamily="@font/sfui_text_regular"
                          android:textSize="12.5sp"

                          />-->
                            <TextView
                                android:id="@+id/tvTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:fontFamily="@font/sfui_text_regular"
                                android:paddingLeft="08dp"
                                android:textColor="@color/text_grey"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="12.5sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loginButton"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sfui_text_regular"
                        android:text="Enter recievers Mobile number*"
                        android:textColor="#123"
                        android:textSize="14sp" />


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/linReciever"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="08dp"
                                android:layout_marginLeft="08dp"
                                android:drawableStart="@drawable/phone"
                                android:drawablePadding="08dp"
                                android:fontFamily="@font/sfui_text_regular"
                                android:gravity="center"
                                android:text="+91" />

                            <EditText
                                android:id="@+id/edittextanum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:fontFamily="@font/sfui_text_regular"
                                android:inputType="number"
                                android:paddingLeft="08dp"
                                android:textColor="@color/text_grey"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="12.5sp"

                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loginButton"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sfui_text_regular"
                        android:text="Contact person name*"
                        android:textColor="#123"
                        android:textSize="14sp" />

                    <android.support.v7.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="5dp">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">


                            <EditText
                                android:id="@+id/edittextcpname"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:drawableLeft="@drawable/person"
                                android:fontFamily="@font/sfui_text_regular"
                                android:inputType="textPersonName"
                                android:paddingLeft="08dp"
                                android:textColor="@color/text_grey"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="12.5sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loginButton"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sfui_text_regular"
                        android:text="Enter senders Mobile number*"
                        android:textColor="#123"
                        android:visibility="gone"
                        android:textSize="14sp" />


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="08dp"
                                android:layout_marginLeft="08dp"
                                android:drawableStart="@drawable/phone"
                                android:drawablePadding="08dp"
                                android:fontFamily="@font/sfui_text_regular"
                                android:gravity="center"
                                android:text="+91" />

                            <EditText
                                android:id="@+id/edittextcnum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:fontFamily="@font/sfui_text_regular"
                                android:inputType="number"
                                android:paddingLeft="08dp"
                                android:textColor="@color/text_grey"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="12.5sp"

                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>




                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:id="@+id/relativeLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <Button
                            android:background="@drawable/btn_veh2"
                            android:id="@+id/buttonbackTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:text="Back"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black" />

                        <Button
                            android:background="@drawable/btn_veh2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:textAllCaps="false"
                            android:text="Next"
                            android:id="@+id/buttonPreview"
                            android:textColor="@android:color/black" />


                    </RelativeLayout>



                </LinearLayout>
            </LinearLayout>


        </ScrollView>
    </LinearLayout>


</FrameLayout>