            <TextView android:textSize="18.3sp" android:id="@+id/tvMerchantName2" app:layout_collapseMode="pin" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16.7dp" android:layout_marginTop="23.5dp"  android:fontFamily="@font/sfpro_display_semibold"/>
