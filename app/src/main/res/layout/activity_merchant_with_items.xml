            <LinearLayout
                android:orientation="horizontal"
                android:tag="sticky"
                android:background="@color/white"
                android:paddingTop="25dp"
                android:paddingBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="16.7dp">

                <TextView android:textSize="13.3sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:fontFamily="@font/sfpro_display_semibold"
                    android:letterSpacing="0.0525"/>
                <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="7dp" app:srcCompat="@drawable/ic_filter_black"/>
                <TextView android:textSize="12.7sp" android:textColor="@color/black" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="Filter" android:fontFamily="@font/sfpro_display_medium" android:letterSpacing="0.0525"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvMenuList"
                android:paddingLeft="16.7dp"
                android:paddingRight="16.7dp"
                android:clipToPadding="false"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
