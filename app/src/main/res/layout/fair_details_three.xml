<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@color/lightgray"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="21.699982dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView android:textSize="26.0sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22.0dip"
                android:text="@string/payable_fare"
                android:fontFamily="@font/sfpro_display_light"
                android:letterSpacing="0.0525" />
            <TextView android:textSize="26.0sp"
                android:textColor="@color/orange"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:text="@string/_13"
                android:fontFamily="@font/sfpro_display_bold" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:background="@color/white"
            android:paddingTop="16.699982dip"
            android:paddingBottom="16.799988dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11.699982dip">
            <ImageView android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.699982dip"
                android:src="@drawable/ic_discount_sticker_with_percentage" />
            <TextView android:textSize="17.0sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.799988dip"
                android:text="@string/apply_promocode"
                android:layout_weight="1.0"
                android:fontFamily="@font/sfpro_display_medium"
                android:letterSpacing="0.0525" />
            <ImageView android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8.0dip"
                android:src="@drawable/back_black"
                android:rotation="180.0" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingLeft="16.699982dip"
            android:paddingRight="16.699982dip"
            android:paddingBottom="16.699982dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11.699982dip">
            <TextView android:textSize="16.0sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.699982dip"
                android:text="@string/bill_detail"
                android:fontFamily="@font/sfpro_display_semibold"
                android:letterSpacing="0.0525" />
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.5dip">
                <TextView android:textSize="15.0sp"
                    android:textColor="@color/silver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/base_fare"
                    android:fontFamily="@font/sfpro_display_light"
                    android:letterSpacing="0.0525" />
                <TextView android:textSize="15.0sp"
                    android:textColor="@color/silver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/_2_km_0_5_min"
                    android:fontFamily="@font/sfpro_display_light"
                    android:letterSpacing="0.0525" />
            </LinearLayout>
            <View android:background="@color/viewline"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginTop="16.699982dip" />
            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.799988dip">
                <TextView android:textSize="17.0sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/ride_kms"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:letterSpacing="0.0525" />
                <TextView android:textSize="17.0sp"
                    android:textColor="@color/black"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/_5_km"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:letterSpacing="0.0525" />
                <TextView android:textSize="17.0sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_10"
                    android:fontFamily="@font/sfpro_display_regular" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.799988dip">
                <TextView android:textSize="17.0sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ride_time"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:letterSpacing="0.0525" />
                <TextView android:textSize="17.0sp"
                    android:textColor="@color/black"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/_20_min"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:letterSpacing="0.0525" />
                <TextView android:textSize="17.0sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_3"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:letterSpacing="0.0525" />
            </LinearLayout>
            <View android:background="@color/viewline"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginTop="16.699982dip" />
            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.799988dip">
                <TextView android:textSize="17.0sp"
                    android:textColor="@color/black"
                    android:layout_width="365.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/to_pay"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sfpro_display_bold"
                    android:letterSpacing="0.0525" />
                <TextView android:textSize="17.0sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_13"
                    android:fontFamily="@font/sfpro_display_bold"
                    android:letterSpacing="0.0525" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/payonline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16.699982dip"
        android:layout_marginEnd="16.699982dip"
        android:layout_marginBottom="16.699982dip"
        android:background="@drawable/btn"
        android:elevation="0.8000001dip"
        android:fontFamily="@font/sfpro_display_medium"
        android:letterSpacing="0.0525"
        android:paddingTop="15.0dip"
        android:paddingBottom="15.0dip"
        android:text="@string/pay_online"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="19.0sp" />
</RelativeLayout>