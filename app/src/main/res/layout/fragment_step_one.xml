<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/content_frame"
    tools:context=".StepOneFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:paddingTop="20dp"
        >
        <ScrollView
            android:scrollbars="none"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/layout_background">
                    
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loginButton"
                        android:layout_gravity="left"
                        android:text="Pickup address*"
                        android:textSize="14sp"
                        android:textColor="#123"
                        android:fontFamily="@font/sfui_text_regular"
                        android:layout_marginTop="10dp"/>

                    <android.support.v7.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="5dp"
                        >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp">

                            <!-- <com.airbnb.lottie.LottieAnimationView

                                 android:layout_width="40dp"
                                 android:layout_height="60dp"
                                 android:layout_gravity="center"
                                 app:lottie_autoPlay="true"
                                 app:lottie_fileName="location.json"
                                 app:lottie_loop="true"/>-->

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_location"/>


                            <TextView
                                android:id="@+id/textviewPickup"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@null"
                                android:fontFamily="@font/sfui_text_regular"
                                android:gravity="left"
                                android:paddingLeft="08dp"
                                android:textColor="@color/text_grey"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="12.5sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loginButton"
                        android:layout_gravity="left"
                        android:text="Enter delivery address*"
                        android:textSize="14sp"
                        android:textColor="#123"
                        android:fontFamily="@font/sfui_text_regular"
                        android:layout_marginTop="10dp"/>

                    <android.support.v7.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="5dp"
                        >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp">


                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_edit_location"/>


                            <!--  <com.airbnb.lottie.LottieAnimationView

                                  android:layout_width="40dp"
                                  android:layout_height="60dp"
                                  android:layout_gravity="center"
                                  app:lottie_autoPlay="true"
                                  app:lottie_fileName="location.json"
                                  app:lottie_loop="true"/>-->

                            <TextView
                                android:id="@+id/edittextDeliveryAddress"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@null"
                                android:fontFamily="@font/sfui_text_regular"
                                android:gravity="left"
                                android:paddingLeft="08dp"
                                android:textColor="@color/text_grey"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="12.5sp"

                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/textforgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loginButton"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sfui_text_regular"
                        android:text="Choose Vehicle*"
                        android:textColor="#123"
                        android:textSize="14sp" />



                    <HorizontalScrollView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:id="@+id/horizontalScrollView">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/chkEbike"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:background="@android:color/transparent"
                                android:drawableTop="@drawable/btn_bike"
                                android:checked="true"
                                android:drawablePadding="0dp"
                                android:gravity="center"
                                android:text="E-Bike"
                                android:padding="10dp"
                                android:textSize="11dp"
                                android:button="@null"
                                />
                            <CheckBox
                                android:id="@+id/chkBike"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:background="@android:color/transparent"
                                android:drawableTop="@drawable/btn_bike"
                                android:checked="true"
                                android:drawablePadding="0dp"
                                android:gravity="center"
                                android:text="Bike"
                                android:padding="10dp"
                                android:textSize="11dp"
                                android:button="@null"
                                />

                            <CheckBox
                                android:id="@+id/chkCar"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:background="@android:color/transparent"
                                android:drawableTop="@drawable/btn_car"
                                android:checked="true"
                                android:drawablePadding="0dp"
                                android:gravity="center"
                                android:text="Car"
                                android:padding="10dp"
                                android:textSize="11dp"
                                android:button="@null"
                                />

                            <CheckBox
                                android:id="@+id/chkVan"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:background="@android:color/transparent"
                                android:drawableTop="@drawable/btn_van"
                                android:checked="true"
                                android:drawablePadding="0dp"
                                android:gravity="center"
                                android:text="Van"
                                android:padding="10dp"
                                android:textSize="11dp"
                                android:button="@null"
                                />
                            <CheckBox
                                android:id="@+id/chkTruck"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:background="@android:color/transparent"
                                android:drawableTop="@drawable/btn_truck"
                                android:checked="true"
                                android:drawablePadding="0dp"
                                android:gravity="center"
                                android:text="Truck"
                                android:padding="10dp"
                                android:textSize="11dp"
                                android:button="@null"
                                />
                        </LinearLayout>



                        <!--   <LinearLayout

                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">
                               <Button
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:background="@drawable/btn_veh"
                                   android:text="Car"
                                   android:id="@+id/buttonCar" />
                               <Button
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:background="@drawable/btn_veh"
                                   android:text="Bike"
                                   android:id="@+id/buttonBike" />

                               <Button
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:background="@drawable/btn_veh"
                                   android:text="truck"
                                   android:id="@+id/buttonTruck" />
                               <Button
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:background="@drawable/btn_veh"
                                   android:text="Van"
                                   android:id="@+id/buttonVan" />

                           </LinearLayout> -->

                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loginButton"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sfui_text_regular"
                        android:text="Enter order details*"
                        android:textColor="#123"
                        android:textSize="14sp" />


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/product_desc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">



                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_product"/>

                            <!--<com.airbnb.lottie.LottieAnimationView

                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                app:lottie_autoPlay="true"
                                app:lottie_fileName="details.json"
                                app:lottie_loop="true"/>-->
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:background="@null"
                                android:fontFamily="@font/sfui_text_regular"
                                android:gravity="left"
                                android:id="@+id/edittextProduct"
                                android:paddingLeft="08dp"
                                android:textColor="@color/text_grey"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="12.5sp"

                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp">


                            </LinearLayout>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/lr_productimage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/hideImageTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:visibility="gone" />

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="200dp"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/product_imageView" />
                            <Button
                                android:id="@+id/btn_productimage"
                                android:paddingLeft="@dimen/small_margin"
                                android:paddingRight="@dimen/small_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="40.0dip"
                                android:minWidth="150.0dip"
                                android:layout_marginTop="10dp"
                                android:text="Upload Product Image*"
                                android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
                                android:drawablePadding="0.0dip"
                                android:layout_below="@id/imageView"
                                android:layout_gravity="center"
                                android:background="@drawable/btn_veh2"
                                android:textAllCaps="false"
                                android:textColor="@android:color/black"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:id="@+id/relativeLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <Button

                            android:background="@drawable/btn_veh2"
                            android:id="@+id/buttonBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:text="Back"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black" />

                        <Button
                            android:id="@+id/buttonNext"
                            android:background="@drawable/btn_veh2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:textAllCaps="false"
                            android:text="Next"
                            android:textColor="@android:color/black" />


                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>