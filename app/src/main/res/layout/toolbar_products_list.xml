<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_25sdp"
    android:background="@drawable/btn_plain"
    >

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <ImageView
            android:clickable="true"
            android:id="@+id/img_back_desc"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/backwhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvMerchantName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Our Merchant"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="@font/sfpro_display_semibold"
            android:layout_marginLeft="5dp"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvTotalCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0 Items"
            android:textColor="@color/white"
            android:textSize="13sp" />
        <FrameLayout
            android:id="@+id/cart_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/img_cart_desc"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_cart" />

            <ImageView
                android:id="@+id/img_dot"
                android:visibility="gone"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="top|right|center_vertical|center_horizontal|center"
                android:layout_marginRight="6dp"
                android:src="@drawable/blue_ellipse" />
        </FrameLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="PRODUT LIST"
        android:textColor="#666666"
        android:textSize="14dp" />
</android.support.v7.widget.Toolbar>
